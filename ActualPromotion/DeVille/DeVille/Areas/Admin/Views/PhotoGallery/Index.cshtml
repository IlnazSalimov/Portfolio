@using Deville.EntityDataModel
@model IEnumerable<PhotoGallery>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Layouts/AdminDefaultLayouts.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Фотогалереи</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    @if (Model.Count() > 0)
    {
        foreach (PhotoGallery pg in Model)
        {
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="thumbnail">
                <a href="@Url.Action("Index", "PhotoAlbum", new { galleryId = pg.Id })">
                    <img src="@pg.ImgCover" alt="@Html.DisplayNameFor(model => model.ImgCover)"></a>
                <div class="caption">
                    <a href="@Url.Action("Index", "PhotoAlbum", new { galleryId = pg.Id })">
                        <h3>@pg.Name</h3>
                    </a>
                    <p>@Html.ActionLink("Редактировать", "Edit", new { id = pg.Id }, new { @class = "btn btn-primary", role = "button" })
                        @Html.ActionLink("Удалить", "Delete", new { id = pg.Id }, new { @class = "btn btn-default", role = "button", onclick = "return confirm('Удалить галлерею?')" })
                    </p>
                </div>
            </div>
        </div>
        }
    }
    else
    {
        <div class="alert alert-warning">
            Ни одной галлереи не существует.
        </div>
    }
</div>
<div class="col-sm-offset-4 col-sm-4">
    @Html.ActionLink("Добавить", "Add", new { }, new { @class = "btn btn-primary btn-lg btn-block" })
</div>
