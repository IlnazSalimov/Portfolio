@using Deville.EntityDataModel
@model IEnumerable<ServiceCategory>
@{
    ViewBag.Title = "Услуги";
    Layout = "~/Views/Layouts/DefaultLayouts.cshtml";
}

@section styles {
    <style>
        .main-content .top {
            background-image: url('/content/img/nail_banner.png');
            background-repeat: no-repeat;
            background-size: cover;
            height: 300px;
        }
    </style>
}

<section class="top">
    <!-- There located top bckg image, which different in other pages -->
    <header class="capital-letter-pink">
        <div>Окунись в мир</div>
        <div>красоты и комфорта...</div>
    </header>
</section>
<section class="content b-container">
    @if (Model.Count() > 0)
    {
        <div class="pure-g">
            @{int i = 0;}
            @foreach (ServiceCategory sc in Model)
            {
                i++;
                <!-- Block wrapper -->
                <div class="pure-u-1-3 b-wrap">
                    <a href="@Url.Action("GetServices", "ServiceCategory", new { categoryId = sc.Id })" class="thumbnail">
                        <!-- Img container -->
                        <div class="b-img">
                            <img class="pure-img" src="@sc.ImgCover" alt="@Html.NameFor(model => sc.ImgCover)" title="@sc.Name" />
                        </div>
                        <!-- Bottom title -->
                        <div class="b-title @(i % 2 == 0 ? "pink" : "")">
                            @sc.Name
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        @: Ни одной категории услуг нет.
    }
</section>
