@using Deville.EntityDataModel
@model IEnumerable<Vacancy>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Layouts/AdminDefaultLayouts.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Вакансии</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    @if (Model.Count() > 0)
    {
            foreach (Vacancy v in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="thumbnail">
                        <img src="@v.ImgCover" title="@v.Title"/>
                        <div class="caption">
                            <h3>@v.Title</h3>
                            <p><strong>@Html.DisplayNameFor(vac => vac.Demands):</strong> @v.Demands</p>
                            <p><strong>@Html.DisplayNameFor(vac => vac.Duties):</strong> @v.Duties</p>
                            <p><strong>@Html.DisplayNameFor(vac => vac.Сondition):</strong> @v.Сondition</p>
                            <p>@v.Description</p>
                            <p>@Html.ActionLink("Редактировать", "Edit", new { id = v.Id }, new { @class = "btn btn-primary", role = "button" })
                                @Html.ActionLink("Удалить", "Delete", new { id = v.Id }, new { @class = "btn btn-default", role = "button", onclick = "return confirm('Удалить запись?')" })
                            </p>
                        </div>
                    </div>
                </div>
            }
    }
    else
    {
        <div class="alert alert-warning">
            Ни одной вакансии не существует.
        </div>
    }
</div>
<div class="row">
    <div class="col-sm-offset-4 col-sm-4">
        @Html.ActionLink("Добавить", "Add", new { }, new { @class = "btn btn-primary btn-lg btn-block" })
    </div>
</div>




