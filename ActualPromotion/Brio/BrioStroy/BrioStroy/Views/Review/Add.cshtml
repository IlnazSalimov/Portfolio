@model Brio.Models.ReviewContent

@{
    ViewBag.Title = "ДОБАВИТЬ ОТЗЫВ";
    Layout = "~/Views/Layouts/LayoutDefault.cshtml";
}

<div class="container run1">
    <div data-id="0" class="slider"></div>
</div>
<div class="block_ins">
    <div class="title">
        @ViewBag.Title
    </div>
    <article class="page-content">
        @using (Html.BeginForm("Add", "Review", FormMethod.Post, new { @class = "pure-form pure-form-aligned", enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <div class="pure-control-group">
                    @Html.LabelFor(model => model.AuthorCompany)
                    @Html.TextBoxFor(model => model.AuthorCompany, new { @class = "pure-input-1-2" })
                    @Html.ValidationMessageFor(model => model.AuthorCompany)
                </div>

                <div class="pure-control-group">
                    @Html.LabelFor(model => model.AuthorName)
                    @Html.TextBoxFor(model => model.AuthorName, new { @class = "pure-input-1-2" })
                    @Html.ValidationMessageFor(model => model.AuthorName)
                </div>

                <div class="pure-control-group">
                    @Html.LabelFor(model => model.AuthorPosition)
                    @Html.TextBoxFor(model => model.AuthorPosition, new { @class = "pure-input-1-2" })
                    @Html.ValidationMessageFor(model => model.AuthorPosition)
                </div>

                <div class="pure-control-group">
                    @Html.LabelFor(model => model.AuthorAvatar)
                    @Html.TextBoxFor(model => model.AuthorAvatar, new { @class = "pure-input-1-2", type="file" })
                    @Html.ValidationMessageFor(model => model.AuthorAvatar)
                </div>

                <div class="pure-control-group">
                    @Html.LabelFor(model => model.Message)
                    @Html.TextAreaFor(model => model.Message, 5, 40, new { @class = "pure-input-1-2" })
                    @Html.ValidationMessageFor(model => model.Message)
                </div>
                <div class="pure-controls">
                    <button type="submit" class="pure-button pure-button-primary">ДОБАВИТЬ</button>
                </div>
            </fieldset>
        }
    </article>
</div>
<div class="bottom_arrows_container">
    <div class="bottom-arrows">
    </div>
</div>
