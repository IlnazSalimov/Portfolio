@model Deville.Models.Showcases.AddReview
@{
    ViewBag.Title = "Добавить отзыв";
    Layout = "~/Areas/Admin/Views/Layouts/AdminDefaultLayouts.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-10">
        @using (Html.BeginForm("Add", "Review", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="form-group @(IsPost && ViewData.ModelState[Html.NameFor(model => model.AuthorFullName).ToString()].Errors.Count > 0 ? "has-error" : String.Empty)">
                @Html.LabelFor(model => model.AuthorFullName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.AuthorFullName, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.AuthorFullName) })
                    <span class="help-block">@Html.ValidationMessageFor(model => model.AuthorFullName)</span>
                </div>
            </div>

            <div class="form-group @(IsPost && ViewData.ModelState[Html.NameFor(model => model.Title).ToString()].Errors.Count > 0 ? "has-error" : String.Empty)">
                @Html.LabelFor(model => model.Title, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Title) })
                    <span class="help-block">@Html.ValidationMessageFor(model => model.Title)</span>
                </div>
            </div>
        
            <div class="form-group @(IsPost && ViewData.ModelState[Html.NameFor(model => model.Message).ToString()].Errors.Count > 0 ? "has-error" : String.Empty)">
                @Html.LabelFor(model => model.Message, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(model => model.Message, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Message) })
                    <span class="help-block">@Html.ValidationMessageFor(model => model.Message)</span>
                </div>
            </div>
        
            <div class="form-group @(IsPost && ViewData.ModelState[Html.NameFor(model => model.AuthorPhoto).ToString()].Errors.Count > 0 ? "has-error" : String.Empty)">
                @Html.LabelFor(model => model.AuthorPhoto, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.AuthorPhoto, new {type = "file", placeholder = Html.DisplayNameFor(model => model.AuthorPhoto) })
                    <span class="help-block">@Html.ValidationMessageFor(model => model.AuthorPhoto)</span>
                </div>
            </div>
            
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Добавить</button>
                @Html.ActionLink("Отмена", "Index", new { }, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>
