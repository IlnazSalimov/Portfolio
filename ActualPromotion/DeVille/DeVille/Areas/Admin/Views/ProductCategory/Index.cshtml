@using Deville.EntityDataModel
@model IEnumerable<ProductCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Layouts/AdminDefaultLayouts.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Категории продуктов</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    @if (Model.Count() > 0)
    {
        foreach (ProductCategory pc in Model)
        {
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="thumbnail">
                <img src="@pc.ImgCover" title="@pc.Title"/>
                <div class="caption">
                    <h3>@pc.Title
                    </h3>
                    <p>@pc.Description</p>
                    <p>@Html.ActionLink("Редактировать", "Edit", new { id = pc.Id }, new { @class = "btn btn-primary", role = "button" })
                       @Html.ActionLink("Удалить", "Delete", new { id = pc.Id }, new { @class = "btn btn-default", role = "button", onclick = "return confirm('Удалить категорию?')" })
                    </p>
                </div>
            </div>
        </div>
        }
    }
    else
    {
        <div class="alert alert-warning">
            Ни одной категории не существует.
        </div>
    }
</div>
<div class="col-sm-offset-4 col-sm-4">
    @Html.ActionLink("Добавить", "Add", new { }, new { @class = "btn btn-primary btn-lg btn-block" })
</div>

